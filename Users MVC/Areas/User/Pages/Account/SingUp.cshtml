@page "/User/SingUp";
@model SingUpModel
@{
    ViewData["Title"] = "SingUp";
}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto shadow border rounded p-4">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Sing Up</h3>
                </div>
                <img src="~/images/webLogo.png" />
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                           <input asp-for="Imput.Email" placeholder="Email" class="form-control" />
                           <span asp-validation-for="Imput.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                           <input asp-for="Imput.Password" placeholder="Password" class="form-control" />
                           <span asp-validation-for="Imput.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                           <input asp-for="Imput.Confirmassword" placeholder="Confirm Password" class="form-control" />
                           <span asp-validation-for="Imput.Confirmassword" class="text-danger "></span>
                        </div>

                        <div class="form-group">
                           <button type="submit"  class="btn btn-primary pr-4 pl-4 btn-block mt-5" >Register</button>
                        </div>

                     </form> 
                </div> 
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name = "_ValidationScriptsPartial" />
}
